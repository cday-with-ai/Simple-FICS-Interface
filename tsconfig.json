{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@fics/shared/*": [
        "packages/shared/src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/*.d.ts"
  ]
}